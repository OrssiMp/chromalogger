{
  "name": "chromalogger",
  "version": "1.2.0",
  "description": "A colorful and flexible console logger for Node.js with CLI support",
  "main": "index.js",
  "type": "module",
  "bin": {
    "clog": "./cli.js"
  },
  "files": [
    "index.js",
    "chromalog.js"
  ],
  "scripts": {
    "test": "node test.js",
    "test:watch": "nodemon --watch chromalog.js --watch test.js --exec \"npm test\"",
    "lint": "eslint .",
    "test:chroma": "node chromatest.js",
    "test:cli": "node clitest.js",
    "test:all": "npm run test && npm run test:chroma && npm run test:cli",
    "format": "prettier --write .",
    "fix": "eslint --fix .",
    "coverage": "c8 npm test"
  },
  "keywords": [
    "log",
    "color",
    "console",
    "logger",
    "chroma",
    "clog",
    "nodejs",
    "browser",
    "ansi",
    "terminal",
    "styling",
    "formatting"
  ],
  "author": {
    "name": "Orssi Mp",
    "email": "orssimpiere5@gmail.com",
    "url": "https://github.com/OrssiMp/chromalogger#readme"
  },
  "license": "MIT",
  "homepage": "https://github.com/OrssiMp/chromalogger#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OrssiMp/chromalogger.git"
  },
  "bugs": {
    "url": "https://github.com/OrssiMp/chromalogger/issues"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "devDependencies": {
    "c8": "^10.1.3",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "nodemon": "^3.1.11",
    "prettier": "^3.7.3"
  }
}
